<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/motor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mtr"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/motor">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16sp"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin in posuere elit, iaculis dictum dui. Mauris venenatis diam tempus tincidunt elementum. Phasellus pulvinar dolor sit amet luctus pellentesque"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:maxLines="6"
            android:ellipsize="end"
            android:textAlignment="gravity"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Price : Rp. -"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8sp"
            android:textSize="15sp"
            android:textColor="#00BCD4"
            />

        </LinearLayout>

</RelativeLayout>